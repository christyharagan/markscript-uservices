{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "declaration": true,
        "module": "commonjs",
        "noImplicitAny": false,
        "noLib": false,
        "rootDir": ".",
        "sourceMap": true,
        "sourceRoot": ".",
        "target": "es5",
        "outDir": "./dist"
    },
    "formatCodeOptions": {
        "indentSize": 2,
        "tabSize": 2
    },
    "filesGlob": [
        "./lib/**/*.ts",
        "./typings/**/*.d.ts",
        "./node_modules/*/*.d.ts",
        "./node_modules/typescript/bin/typescript.d.ts",
        "./markscript-uservices.d.ts"
    ],
    "compileOnSave": true,
    "files": [
        "./lib/decorators.ts",
        "./lib/generator.ts",
        "./lib/index.ts",
        "./lib/localProxy.ts",
        "./lib/markscriptPlugin.ts",
        "./lib/model.ts",
        "./lib/remoteProxy.ts",
        "./lib/rfp.ts",
        "./typings/es6/es6.d.ts",
        "./typings/node/node.d.ts",
        "./typings/tsd.d.ts",
        "./node_modules/markscript-core/markscript.d.ts",
        "./node_modules/ml-admin/ml-admin.d.ts",
        "./node_modules/ml-typescript-definitions/client.d.ts",
        "./node_modules/ml-typescript-definitions/server.d.ts",
        "./node_modules/speckle/speckle.d.ts",
        "./node_modules/tschuss/tschuss.d.ts",
        "./node_modules/typescript-package/typescript-package.d.ts",
        "./node_modules/typescript-schema/typescript-schema.d.ts",
        "./node_modules/typescript-template/typescript-template.d.ts",
        "./node_modules/uservices/uservices.d.ts",
        "./node_modules/typescript/bin/typescript.d.ts",
        "./markscript-uservices.d.ts"
    ]
}
