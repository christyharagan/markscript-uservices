{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "rootDir": "./src",
        "sourceMap": true,
        "sourceRoot": ".",
        "outDir": ".",
        "moduleResolution": "node"
    },
    "formatCodeOptions": {
        "indentSize": 2,
        "tabSize": 2
    },
    "compileOnSave": true,
    "exclude": [
        "node_modules/marklogic-node-typescript-definitions/typings",
        "node_modules/marklogic",
        "node_modules/markscript-core",
        "node_modules/ml-admin",
        "node_modules/typescript",
        "node_modules/typescript-package",
        "node_modules/typescript-schema",
        "node_modules/uservices"
    ]
}
